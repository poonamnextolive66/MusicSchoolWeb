
@{
    ViewBag.Title = "Login";
    Layout = null;
}<html>
 <head>
     <meta charset="UTF-8">
     <meta http-equiv="X-UA-Compatible" content="IE=edge">
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <style>
         import url('https://fonts.googleapis.com/css?family=Raleway:400,700');
         * {
             box-sizing: border-box;
             margin: 0;
             padding: 0;
         }

         body {
             margin: 0;
             padding: 0;
             width: 100%;
             height: 100%;
             box-sizing: border-box;
             font-family: Raleway, sans-serif;
             background: #b9d6d973;
         }

         .container {
             display: flex;
             align-items: center;
             justify-content: center;
             box-sizing: border-box;
         }

         main#main {
             height: 100%;
             display: -webkit-box;
             display: -ms-flexbox;
             display: flex;
             -webkit-box-pack: center;
             -ms-flex-pack: center;
             justify-content: center;
             -webkit-box-align: center;
             -ms-flex-align: center;
             align-items: center;
             box-sizing: border-box;
             padding: 0 15px;
             flex-wrap: wrap;
             flex-direction: column;
         }

         .screen {
             background: linear-gradient(90deg, #11c1d3, #1fb4c3);
             position: relative;
             height: auto;
             width: 360px;
             box-shadow: 0px 0px 12px #1fb4c3;
             display: block;
             /*margin: 05% auto 3% auto;*/
             z-index: 99;
             box-sizing: border-box;
             border-radius: 10px;
         }

         .screen__content {
             z-index: 1;
             position: relative;
             height: 100%;
             box-sizing: border-box;
         }

         .screen__background {
             position: absolute;
             top: 0;
             left: 0;
             right: 0;
             bottom: 0;
             z-index: 0;
             -webkit-clip-path: inset(0 0 0 0);
             clip-path: inset(0 0 0 0);
             box-sizing: border-box;
             overflow: hidden;
             border-radius: 10px;
         }

         .screen__background__shape {
             transform: rotate(45deg);
             position: absolute;
             box-sizing: border-box;
         }

         .screen__background__shape1 {
             height: 520px;
             width: 520px;
             background: #FFF;
             top: -50px;
             right: 120px;
             border-radius: 0 72px 0 0;
             box-sizing: border-box;
         }

         .screen__background__shape2 {
             height: 220px;
             width: 220px;
             background: #1fb4c3;
             top: -172px;
             right: 0;
             border-radius: 32px;
             box-sizing: border-box;
         }

         .screen__background__shape3 {
             height: 540px;
             width: 190px;
             background: linear-gradient(270deg, #11c1d3, #1fb4c3);
             top: -24px;
             right: 0;
             border-radius: 32px;
             box-sizing: border-box;
         }

         .screen__background__shape4 {
             height: 400px;
             width: 200px;
             background: #11c1d3;
             top: 420px;
             right: 50px;
             border-radius: 60px;
             box-sizing: border-box;
         }

         .login {
             width: 100%;
             padding: 20px;
             box-sizing: border-box;
         }

         .login__field > h3 {
             margin: 0;
         }

         .login__field {
             padding: 20px 0px;
             position: relative;
             box-sizing: border-box;
         }

         .login__icon {
             position: absolute;
             top: 30px;
             color: #7875B5;
             box-sizing: border-box;
         }

         .login__input {
             border: none;
             border-bottom: 2px solid #D1D1D4;
             background: none;
             padding: 10px;
             padding-left: 24px;
             font-weight: 700;
             width: 100%;
             transition: .2s;
             box-sizing: border-box;
         }

             .login__input:active,
             .login__input:focus,
             .login__input:hover {
                 outline: none;
                 border-bottom-color: #6A679E;
                 box-sizing: border-box;
             }

         .login__submit {
             background: #fff;
             font-size: 14px;
             margin-top: 30px;
             /* padding: 16px 20px; */
             border-radius: 26px;
             border: 1px solid #D4D3E8;
             text-transform: uppercase;
             font-weight: 700;
             display: flow-root;
             align-items: center;
             width: 100%;
             color: #4C489D;
             box-shadow: 0px 2px 2px #5C5696;
             cursor: pointer;
             transition: .2s;
             height: 50px;
             box-sizing: border-box;
             position: relative;
             z-index: 9;
         }

             .login__submit:active,
             .login__submit:focus,
             .login__submit:hover {
                 border-color: #6A679E;
                 outline: none;
             }

         .button__icon {
             font-size: 24px;
             margin-left: auto;
             color: #7875B5;
             box-sizing: border-box;
         }

         .social-login {
             position: absolute;
             height: 140px;
             width: 160px;
             text-align: center;
             bottom: 0px;
             right: 0px;
             color: #fff;
             box-sizing: border-box;
         }

         .social-icons {
             display: flex;
             align-items: center;
             justify-content: center;
             box-sizing: border-box;
         }

         .social-login__icon {
             padding: 20px 10px;
             color: #fff;
             text-decoration: none;
             text-shadow: 0px 0px 8px #7875B5;
             box-sizing: border-box;
         }

             .social-login__icon:hover {
                 transform: scale(1.5);
             }

         @@media(max-width:400px) {
             .screen {
                 width: 100%;
             }
         }
     </style>
     <script src="chrome-extension://mooikfkahbdckldjjndioackbalphokd/assets/prompt.js"></script>
 </head>
<body>
    <main id="main">
        <!-- ======= Contact Section ======= -->
        <div class="screen">
            <div class="screen__content col-sm-12  col-mg-12 ">

                <form class="login" action="/Account/Login" method="post">
                    <div class="login__field">
                        <h3>Login Now </h3>
                    </div>
                    <div class="login__field">
                        <i class="login__icon fas fa-user"></i>
                        <input type="text" class="login__input" placeholder="User name / Email" name="UserId" required="">
                    </div>
                    <div class="login__field">
                        <i class="login__icon fas fa-lock"></i>
                        <input type="password" class="login__input" placeholder="Password" name="password" required="">
                    </div>
                    <button class="button login__submit">
                        <span class="button__text">Log In Now</span>
                        <i class="button__icon fas fa-chevron-right"></i>
                    </button>
                </form>
                <div class="social-login">
                    <div class="social-icons">
                        <a href="#" class="social-login__icon fab fa-instagram"></a>
                        <a href="#" class="social-login__icon fab fa-facebook"></a>
                        <a href="#" class="social-login__icon fab fa-twitter"></a>
                    </div>
                </div>
            </div>
            <div class="screen__background col-sm-12  col-mg-12 ">
                <span class="screen__background__shape screen__background__shape4"></span>
                <span class="screen__background__shape screen__background__shape3"></span>
                <span class="screen__background__shape screen__background__shape2"></span>
                <span class="screen__background__shape screen__background__shape1"></span>
            </div>
        </div>

    </main><!-- End #main -->
</body>
</html>
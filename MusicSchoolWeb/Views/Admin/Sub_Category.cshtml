@*@model IEnumerable<MusicSchoolWeb.Models.Lesson>*@
@{
    ViewBag.Title = "Sub_Category";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}
@using MusicSchoolWeb.Models;
<main id="main">
    <!-- ======= Blog Header ======= -->
    <div class="header-bg page-area">
        <div class="container position-relative">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="slider-content text-center">
                        <div class="header-bottom">
                            <div class="layer2">
                                <h1 class="title2">Sub Category</h1>
                            </div>
                            <div class="layer3">
                                <h2 class="title3">Music Learning Online Portal</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- End Blog Header -->
    <!-- ======= Blog Page ======= -->
    <div class="blog-page area-padding">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="sub-category-list-section">
                        <table class="table table-hovered sub-category-table">
                            @{
                                int i = 1;

                                string currentlession = "";
                            }
                            @foreach (var data in ViewBag.lasson)
                            {
                                <tr>
                                    <td>
                                        <details class="details-example">
                                            <summary>@i . @data.LessonName</summary>
                                            @{
                                                double j = i + 0.1;
                                            }
                                            @foreach (var data1 in ViewBag.topic)
                                            {
                                                if (data.LessonId == data1.LessionId)
                                                {
                                                    <ul>
                                                        <li tabindex="1"> <a href="#" class="facey" onclick="getTopic(@data.LessonId,@data1.Id)">@j @data1.TopicName</a></li>
                                                    </ul>
                                                    j = j + 0.1;
                                                }
                                            }
                                        </details>
                                    </td>
                                </tr>
                                i++;
                            }
                        </table>
                    </div>
                </div>
            </div>
            <div class="row text-center">
                <a class="btn btn-primary" id="next">Next </a>
            </div>
        </div>
    </div><!-- End Blog Page -->
    <style>

        #facey {
            float: left;
            color: white;
        }

            #facey:hover {
                background-position: 0 -32px;
            }

            #facey a {
                display: block;
            }
    </style>

</main><!-- End #main -->
<script src="~/assets/js/jquery-1.7.1.min.js"></script>
<script>
        function getTopic(lessonId, topicId) {
            $("#next").attr("href", "");
            $("#next").attr("href", "/User/Play_Match_Pitch?lessonId=" + lessonId + "&topicId=" + topicId + "");
        }
</script>
